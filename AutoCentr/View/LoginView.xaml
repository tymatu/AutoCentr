<UserControl x:Class="AutoCentr.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoCentr.View"
             mc:Ignorable="d" 
             Height="570" Width="825"
             >
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Image Source="/Resources/Image.jpg" Stretch="UniformToFill"/>
        <StackPanel Orientation="Vertical"
                    Margin="50">
            <TextBlock Text="AUTO CENTER" 
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
                       Padding="10"
                       Foreground="White"
                           
            />
            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Uživatelksé jmeno" 
                       Grid.Row="0"
                       Margin="0,15"
                       HorizontalAlignment="Left"/>
                <TextBox  Grid.Column="1"
                      Grid.Row="1"
                      Padding="0,5"
                      Width="255"
                      HorizontalAlignment="Left"
                      Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                      Style="{StaticResource RoundedTextBoxStyle}"
                      
                          />
                <TextBlock Text="Heslo" 
                       Grid.Row="2"
                       Margin="0,15"
                       HorizontalAlignment="Left"
                       />

                <PasswordBox Grid.Row="3"
                          Name="passwordBox"
                          Padding="0,5"                           
                          Width="255"
                          HorizontalAlignment="Left"
                          Style="{StaticResource RoundedPasswordBoxStyle}"
                          PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMsg}"
                                Foreground="#D7596D"
                                FontSize="12"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="9,33,8,-25"
                                TextWrapping="Wrap" Grid.Row="3"/>
            </Grid>
            <Button x:Name="LoginBtn" 
                        Command="{Binding LoginCommand}"
                        Content="PŘIHLASIT" 
                        Foreground="White"
                        Background="#008080"
                        Margin="0,25"
                        Height="35"
                        Cursor="Hand"   
                        Width="250"
                        IsDefault="True"
                        Style="{StaticResource RoundedButtonStyle}"
                        
                        
                />
        </StackPanel>
    </Grid>
</UserControl>

